<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ToGather.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:background">@drawable/edittext_courner</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.ToGather.Button_White">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">34dp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/all_background_focusOut</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="Theme.ToGather.Button_White_Short">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_white_short</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="Theme.ToGather.Button_Yellow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_yellow</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="Theme.ToGather.Button_Yellow_Short">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_yellow_short</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="Theme.ToGather.CardView_Tag">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Theme.ToGather.TextView_Tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="Theme.ToGather.TextView_Title">
        <item name="android:layout_width">334dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.ToGather.CardView_Tag_Post">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:backgroundTint">@color/tag_background_gray</item>
    </style>

    <style name="Theme.ToGather.TextView_Tag_Post">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingHorizontal">12dp</item>
    </style>

    <style name="Theme.ToGather.TextView_Focus_Out">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/all_background_focusOut</item>
    </style>

    <style name="Theme.ToGather.ConstraintLayout_Line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/all_stroke</item>
    </style>

    <style name="Theme.ToGather.Button_MyPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_myinfo</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="Theme.ToGather.TextInputLayout_Register">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="Theme.ToGather.TextView_Notify">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.ToGather.Circular_Image">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="Theme.ToGather.TextView_Title_View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:layout_marginTop">160dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Theme.ToGather.Textview_Title_Des">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>