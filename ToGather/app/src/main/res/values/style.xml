    <style name="Theme.ToGather.Button_White">
        <item name="android:layout_width">358dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_white</item>
    </style>

    <style name="Theme.ToGather.Button_Yellow">
        <item name="android:layout_width">358dp</item>
        <item name="android:layout_height">48dp</item>
