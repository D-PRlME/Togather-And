<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ToGather.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">358dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:background">@drawable/edittext_courner</item>
