<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_verify_email_email"
            android:layout_width="146dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="202dp"
            android:src="@drawable/image_verify_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_verify_email_notify"
            style="@style/Theme.ToGather.TextView_Notify"
            android:text="jsh0911@dsm.hs.kr로 전송된 6자리\n인증번호를 입력해 주세요.인증 번호는 5분 \n후에 만료됩니다"
            android:textSize="20sp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_verify_email_email" />

        <EditText
            android:id="@+id/et_verify_email_code"
            style="@style/Theme.ToGather.EditText"
            android:layout_marginTop="12dp"
            android:hint="@string/verify_email_code"
            android:inputType="number"
            android:layout_marginHorizontal="16dp"
            android:maxLength="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_verify_email_notify" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/icon_verify_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_verify_email_code" />

        <Button
            android:id="@+id/bt_verify_email_next"
            style="@style/Theme.ToGather.Button_White"
            android:layout_marginBottom="34dp"
            android:text="@string/register_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>